<% if @reviews.count == 0 %>
    <div class="text-center"><h4>Aucun commentaire.</h4></div>
<% else %>
    <% @reviews.order("id DESC").each do |r| %>
    <hr>
    <div class="row">
        <div class="col-md-1">
            <%= image_tag avatar_url(r.user), class:"img-circle avatar-medium" %>
        </div>
        <div class="col-md-11">
            <div>
                <strong><%= r.user.fullname %> <%= r.star %></strong>
                <span class="pull-right">
                    <%= link_to "Supprimer mon commentaire", [@room, r], method: :delete, data: {confirm: "Etes-vous sÃ»r?"} if current_user && current_user == r.user %>
                </span>
            </div>
            <div><%= r.created_at.strftime("%d.%m.%y") %></div>
            <div><%= r.comment %></div>
        </div>
    </div>
    <% end %>
<% end %>